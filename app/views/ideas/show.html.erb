<p id="notice"><%= notice %></p>

<p>
  <strong>Nome:</strong>
  <%= @idea.name %>
</p>

<p>
  <strong>Descrição:</strong>
  <%= @idea.description %>
</p>

<p>
  <strong>Imágem:</strong>
  <%= image_tag(@idea.picture_url, :width => 600) if @idea.picture.present? %>
  <h3>Atributos:</h3>
  <% @idea.comments.each do |comment| %>
	<div>
	  <strong><%= comment.user_name %></strong>
	  <br />
	  <p><%= comment.body %><p>
	</div>
  <% end %>
  <%= render 'comments/form' %>
</p>

<button type="button" class="btn btn-primary btn-sm"><%= link_to 'Editar', edit_idea_path(@idea) %></button> |
<button type="button" class="btn btn-primary btn-sm"><%= link_to 'Voltar', ideas_path %></button>
