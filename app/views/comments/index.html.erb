<p id="notice"><%= notice %></p>

<h1>Lista de Atributos</h1>
<button type="button" class="btn btn-primary btn-lg btn-block"><%= link_to 'Adicionar Novo Atributo', new_comment_path %></button>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Tipo de Atributo</th>
      <th>Descição</th>
      <th>Identificação</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.user_name %></td>
        <td><%= comment.body %></td>
        <td><%= comment.idea_id %></td>
        <td><button type="button" class="btn btn-primary btn-xs"><%= link_to 'Ver', comment %></button></td>
        <td><button type="button" class="btn btn-primary btn-xs"><%= link_to 'Editar', edit_comment_path(comment) %></button></td>
        <td><button type="button" class="btn btn-primary btn-xs"><%= link_to 'Excluir', comment, method: :delete, data: { confirm: 'Você tem certeza de que deseja excluir permanentemente este atributo?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-primary btn-lg btn-block"><%= link_to 'Adicionar Novo Atributo', new_comment_path %></button>
